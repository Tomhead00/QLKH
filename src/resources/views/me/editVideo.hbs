<div class="container">
    <div class="mt-4">
        <h3><b>Thêm video cho khóa học:</b></h3>
        <h3>{{course.name}}</h3>

        <form class="mt-4 pl-5 pr-5 pb-5" method="POST" action="/me/stored/{{course._id}}?_method=PUT">
            <div class="form-group">
                <label for="name">Tên video:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="mieuta">miêu tả:</label>
                <textarea type="text" class="form-control" id="mieuta" name="mieuta"></textarea>
            </div>
            <div class="form-group">
                <label for="name">videoID:</label>
                <input type="text" class="form-control" id="videoID" name="videoID" required>
            </div>
            <div>
                <button type="submit" class="btn btn-primary float-right ml-2">Lưu lại</button>
                <input type="button" class="btn btn-danger cancel float-right" value="Quay lại">
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var cancelForm = $(".btn.btn-danger.cancel.float-right");

        // Btn cancel
        cancelForm.click(function() {
            window.history.back();
        })
    })
</script>