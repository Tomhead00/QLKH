<div class="container">
    <div class="mt-4">
        <h3><b>Cập nhật khóa học</b></h3>

        <form class="mt-4 pl-5 pr-5 pb-5" method="POST" action="/courses/{{course._id}}?_method=PUT">
            <div class="form-group">
                <label for="name">Tên khóa học:</label>
                <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="mieuta">miêu tả khóa học</label>
                <textarea type="text" class="form-control" id="mieuta" name="mieuta">{{course.mieuta}}</textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-primary float-right ml-2">Lưu lại</button>
                <input type="button" class="btn btn-danger cancel float-right" value="Quay lại">
            </div>
        </form>

        <div class="row mt-4">
            <h3 class="mb-0 col-sm-4"><b>Video khóa học:</b></h3>
            <a class="col-sm-8 text-right" href="#">Thùng rác  <i class="fas fa-angle-double-right"></i></a>
        </div>
        <div class="row">
           {{!-- add khóa học --}}
            <div class="col-sm-3 col-lg-3 card-deck mt-4">
                <div class="card card-course-item">
                    <div class="card-body w-100 d-flex justify-content-center align-items-center" style="height: 429.59px; background-color: rgba(0,0,255,.1)">
                        <a href="/me/stored/{{course._id}}/edit/video"><i class="fas fa-plus-circle fa-5x"></i></a>
                    </div>
                </div>
            </div>

            {{#each courses}}
            <div class="col-sm-3 col-lg-3 card-deck mt-4">
                <div class="card card-course-item">
                    <a href="/courses/{{this.slug}}">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.image}}">
                    </a>

                    <div class="card-body">
                            <a href="/courses/{{this.slug}}">
                                <h5 class="card-title">{{this.name}}</h5>
                            </a>
                        <p class="card-text">{{this.mieuta}}</p>
                        <p><img src="https://source.unsplash.com/random/306x230" alt="" class="user-avatar"><b>xxx</b></p>
                        <div class="card-footer d-flex">
                            <small class="text-muted time">{{this.updatedAt}}</small>
                            <small class="text-muted ml-auto"><i class="fas fa-users"></i> 1000</small>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var cancelForm = $(".btn.btn-danger.cancel.float-right");

        // Btn cancel
        cancelForm.click(function() {
            window.history.back();
        })
    })
</script>